<%= link_to "Create New Item", new_portfolio_path %>
<% @portfolio_items.each do |portfolio_item| %>
<%= link_to "Edit Item", edit_portfolio_path(portfolio_item.id) %> <!--- portfolio_item.id is for us to tell it which portfolio to edit -->
<!-- We have to include method: :delete to tell rails that we want to delete, because by default, it gets -->
<%= link_to 'Delete Portfolio Item', portfolio_item, method: :delete, data: { confirm: 'Are you sure?' } %>
  <p><%=link_to portfolio_item.title, portfolio_show_path(portfolio_item.id) %></p>
  <p><%= portfolio_item.subtitle %></p>
  <p><%= portfolio_item.body %></p>
  <%= image_tag portfolio_item.thumb_image if !portfolio_item.thumb_image.nil?%>
  <p>---------------------------</p>
<% end %>
